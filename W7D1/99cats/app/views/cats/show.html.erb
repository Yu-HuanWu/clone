<h1><%= @cat.name %></h1>

<table>

  <tr>
    <th>Attribute</th>
    <th>Value</th>
  </tr>
  <% [:age, :birth_date, :color, :sex].each do |attr_name| %>
    <tr>
      <td><%= attr_name %></td>
      <td><%= @cat.send(attr_name) %></td>
    </tr>
  <% end %>
    <tr>
    <td colspan="2">
    <img src="<%= @cat.sex== "F" ? "https://i.imgur.com/G7jtcxv.jpeg" : "https://i.imgur.com/oi7AScf.jpeg" %>"
      alt="cat eaten by fish or cat in dress">
    </td>
  </tr>
</table>

<a href="<%= edit_cat_url(@cat) %>">Edit <%= @cat.name %></a>

<h2>Rental Requests</h2>
<table>
  <tr>
    <th>Start Date</th>
    <th>End Date</th>
    <th>Status</th>
  </tr>
  <% @cat.rental_requests.order('start_date').each do |req| %>
    <%= render 'req_tr', req: req %>
  <% end %>
</table>
